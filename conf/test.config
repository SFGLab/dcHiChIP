/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run sfglab/hichip -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input  = "/mnt/d/run_d/samplesheet_poland.csv"
    fasta = "/mnt/d/data/UOC/reference_genome/GRCh38/chr19.fa"
    genomics_features = "/mnt/d/run_d/hichip/MAPS/MAPS_data_files/hg38/genomic_features/F_GC_M_MboI_10Kb_el.GRCh38.txt"
    
    //ref = "/app/ref/Homo_sapiens_assembly38.fasta"
    //ref_short = "hg38"
    outdir = "results"
    
    //design = "/app/design_high.csv"
    //chrom_sizes = "/app/hg38.chrom.sizes"
    mapq = 30
    peak_quality = 0.05
    genome_size = "hs"

    // Genome references
    genome = 'R64-1-1'
}
